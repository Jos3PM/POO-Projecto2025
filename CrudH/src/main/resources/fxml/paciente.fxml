<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pe.edu.upeu.crudh.controller.PacienteController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="DNI:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="dniField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

        <Label text="Fecha de nacimiento:" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
        <DatePicker fx:id="fechaNacimientoPicker" GridPane.columnIndex="5" GridPane.rowIndex="0"/>

        <Label text="N° Teléfono:" GridPane.columnIndex="6" GridPane.rowIndex="0"/>
        <TextField fx:id="telefonoField" GridPane.columnIndex="7" GridPane.rowIndex="0"/>

        <Label text="Dirección:" GridPane.columnIndex="8" GridPane.rowIndex="0"/>
        <TextField fx:id="direccionField" GridPane.columnIndex="9" GridPane.rowIndex="0"/>

        <Label text="Edad:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="edadField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Sexo/Género:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="sexoField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

        <Label text="Correo:" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
        <TextField fx:id="correoField" GridPane.columnIndex="5" GridPane.rowIndex="1"/>

        <Label text="Caso:" GridPane.columnIndex="6" GridPane.rowIndex="1"/>
        <TextField fx:id="casoField" GridPane.columnIndex="7" GridPane.rowIndex="1"/>

        <Label text="Estatura:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="estaturaField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Peso:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="pesoField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

        <Label text="Tipo de Sangre:" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
        <TextField fx:id="tipoSangreField" GridPane.columnIndex="5" GridPane.rowIndex="2"/>

        <Label text="Enfermedad Genética:" GridPane.columnIndex="6" GridPane.rowIndex="2"/>
        <TextField fx:id="enfermedadGeneticaField" GridPane.columnIndex="7" GridPane.rowIndex="2"/>

        <Button text="ADD" onAction="#handleGuardar" GridPane.columnIndex="9" GridPane.rowIndex="2"/>
    </GridPane>

    <Label text="Paciente:"/>
    <TextField fx:id="searchField" promptText="Buscar paciente..."/>

    <TableView fx:id="pacienteTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="Id Paciente"/>
            <TableColumn fx:id="nombreColumn" text="Nombre"/>
            <TableColumn fx:id="edadColumn" text="Edad"/>
            <TableColumn fx:id="casoColumn" text="Caso"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Editar" onAction="#handleGuardar"/>
        <Button text="Eliminar" onAction="#handleEliminar"/>
    </HBox>
</VBox>