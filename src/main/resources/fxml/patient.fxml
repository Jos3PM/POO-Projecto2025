<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pe.edu.upeu.crudf.controller.PatientController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TabPane>
        <Tab text="Patient Information">
            <VBox spacing="10">
                <GridPane hgap="10" vgap="10">
                    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="DNI:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="dniField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <DatePicker fx:id="dobPicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                    <Label text="Blood Type:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <TextField fx:id="bloodTypeField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Save" onAction="#handleSave"/>
                    <Button text="Delete" onAction="#handleDelete"/>
                </HBox>

                <TableView fx:id="patientTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID"/>
                        <TableColumn fx:id="nameColumn" text="Name"/>
                        <TableColumn fx:id="dniColumn" text="DNI"/>
                        <TableColumn fx:id="dobColumn" text="Date of Birth"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <Tab text="Health Status">
            <VBox spacing="10">
                <GridPane hgap="10" vgap="10">
                    <Label text="Blood Pressure:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="bpField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Temperature:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="tempField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Weight:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="weightField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Height:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="heightField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Symptoms:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextArea fx:id="symptomsArea" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                    <Label text="Diagnosis:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <TextArea fx:id="diagnosisArea" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                    <Label text="Treatment:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                    <TextArea fx:id="treatmentArea" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                </GridPane>

                <Button text="Save Health Status" onAction="#handleSaveHealthStatus"/>
            </VBox>
        </Tab>

        <Tab text="Medical History">
            <VBox spacing="10">
                <GridPane hgap="10" vgap="10">
                    <Label text="Previous Conditions:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextArea fx:id="conditionsArea" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Allergies:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextArea fx:id="allergiesArea" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Surgeries:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextArea fx:id="surgeriesArea" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Family History:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextArea fx:id="familyHistoryArea" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Medications:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextArea fx:id="medicationsArea" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>

                <Button text="Save Medical History" onAction="#handleSaveMedicalHistory"/>
            </VBox>
        </Tab>

        <Tab text="Appointments">
            <VBox spacing="10">
                <GridPane hgap="10" vgap="10">
                    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <DatePicker fx:id="appointmentDate" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Time:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="appointmentTime" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Doctor:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="doctorField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Specialty:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="specialtyField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Reason:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextArea fx:id="reasonArea" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Schedule Appointment" onAction="#handleScheduleAppointment"/>
                    <Button text="Generate Invoice" onAction="#handleGenerateInvoice"/>
                </HBox>

                <TableView fx:id="appointmentTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="appointmentDateColumn" text="Date"/>
                        <TableColumn fx:id="doctorColumn" text="Doctor"/>
                        <TableColumn fx:id="specialtyColumn" text="Specialty"/>
                        <TableColumn fx:id="statusColumn" text="Status"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
</VBox>